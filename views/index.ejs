<%- include("./partials/header") %>
    <div class="mainContent">
        <div class="container">
            <h1>UPCOMING RACES</h1>
            <div class="row indexPageTopThree"> 
                <div class="col col-lg-4 col-md-6 col-12">
                    <div class="card" style="width: 18rem;">
                        <img src=<%= raceCalendar["2020"][0]["Image"]%> class="card-img-top" alt="...">
                        <div class="card-body">
                        <h2 class="card-title"><%= raceCalendar["2020"][0]["Grand Prix"] %></h5>
                        <h4><%= raceCalendar["2020"][0]["Date"] %></h6>
                        </div>
                    </div>
                </div>
                <div class="col col-lg-4 col-md-6 col-12">
                    <div class="card" style="width: 18rem;">
                        <img src=<%= raceCalendar["2020"][1]["Image"]%> class="card-img-top" alt="...">
                        <div class="card-body">
                        <h2 class="card-title"><%= raceCalendar["2020"][1]["Grand Prix"] %></h5>
                        <h4><%= raceCalendar["2020"][1]["Date"] %></h6>
                        </div>
                    </div>
                </div>
                <div class="col col-lg-4 col-md-6 col-12">
                    <div class="card" style="width: 18rem;">
                        <img src=<%= raceCalendar["2020"][2]["Image"]%> class="card-img-top" alt="...">
                        <div class="card-body">
                        <h2 class="card-title"><%= raceCalendar["2020"][2]["Grand Prix"] %></h5>
                        <h4><%= raceCalendar["2020"][2]["Date"] %></h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="driversList" class="driversChamp">
            <h1>2020 Driver Standings</h1>
            <table class="driverChampTable">
                <thead>
                    <tr>
                        <th>POS</th>
                        <th>DRIVER</th>
                        <th>CAR</th>
                        <th>PTS</th>
                    </tr>
                </thead>
                <tbody>
                    <% driverLeaderBoard.map((driver, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= driver.driver %></td>
                            <td><%= driver.team %></td>
                            <td><%= driver.points %></td>
                        </tr>
                    <% }) %>
                </tbody>
                
            </table>
        </div>
    </div>    
    <%- include("./partials/footer") %>

   
