<%- include("./partials/header") %>
    <div class="mainContent">
        <div class="container">
            <h1>UPCOMING RACES</h1>
            <h2 id="currentSeason">SEASON <%=currentSeason%></h2>
            <div class="row indexPageTopThree">               
                <div class="col">
                    <div class="card" style="width: 18rem;">
                        <img src=<%= raceCalendar[3]["Image"]%> class="card-img-top" alt="...">
                        <div class="card-body">
                        <h2 class="card-title">#4 <%= raceCalendar[3]["Grand Prix"] %></h5>
                        <h4><%= raceCalendar[3]["Date"] %></h4>
                        <h5><%= raceCalendar[3]["Time"] %></h5>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card" style="width: 18rem;">
                        <img src=<%= raceCalendar[4]["Image"]%> class="card-img-top" alt="...">
                        <div class="card-body">
                        <h2 class="card-title">#5 <%= raceCalendar[4]["Grand Prix"] %></h5>
                        <h4><%= raceCalendar[4]["Date"] %></h4>
                        <h5><%= raceCalendar[4]["Time"] %></h5>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card" style="width: 18rem;">
                        <img src=<%= raceCalendar[5]["Image"]%> class="card-img-top" alt="...">
                        <div class="card-body">
                        <h2 class="card-title">#6 <%= raceCalendar[5]["Grand Prix"] %></h5>
                        <h4><%= raceCalendar[5]["Date"] %></h4>
                        <h5><%= raceCalendar[5]["Time"] %></h5>
                        </div>
                    </div>
                </div>     
            </div>
        </div>
        <div id="driversList" class="driversChamp">
            <h1>Season <%=currentSeason%> Driver Standings</h1>
            <table class="driverChampTable">
                <thead>
                    <tr>
                        <th>POS</th>
                        <th>DRIVER</th>
                        <th>CAR</th>
                        <th class="points">PTS</th>
                    </tr>
                </thead>
                <tbody>
                    <% driverProfile.map((driver, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= driver.driver %></td>
                            <td><%= driver.team %></td>
                            <td class="points"><%= driver.points %></td>
                        </tr>
                    <% }) %>
                </tbody>
                
            </table>
        </div>
    </div>    
    <%- include("./partials/footer") %>

   
