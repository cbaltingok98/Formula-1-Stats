<%- include("./partials/header") %>
<div class="leaderboardHist">
    <div class="container">
        <h1>PREVIOUS LEADERBOARDS</h1>
        <div id="driversList" class="driversChamp">
            <% leaderboardHistory.map(board => { %>
                <h1>Season <%=board["season"]%> Driver Standings</h1>
                <table class="driverChampTable">
                    <thead>
                        <tr>
                            <th>POS</th>
                            <th>DRIVER</th>
                            <th>CAR</th>
                            <th>PTS</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% board["standings"].map((driver, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= driver.driver %></td>
                                <td><%= driver.team %></td>
                                <td><%= driver.points %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                    
                </table>

            <% }) %>
        </div>
    </div>
</div>
<%- include("./partials/footer") %>